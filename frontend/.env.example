# =================================================================
# Rail Madad AI - Frontend Environment Variables
# =================================================================

# =================================================================
# Feature Flags
# =================================================================
# These flags control which features are visible in the application.
# Set to 'true' to enable a feature, 'false' or leave unset to disable.

# Enable ALL features at once (useful for development/testing)
# Default: false (MVP mode - only core features enabled)
VITE_ENABLE_ALL_FEATURES=false

# Individual Feature Flags
# -------------------------

# Core Features (Always enabled, these flags have no effect)
# - Landing Page
# - Complaint Chatbot
# - Dashboard
# - All Complaints
# - Settings (Minimal)

# Advanced Features (v2.0)
VITE_FEATURE_AI_INSIGHTS=false        # AI-powered insights and sentiment analysis
VITE_FEATURE_ANALYTICS=false          # Advanced analytics and reporting
VITE_FEATURE_DEPARTMENT_ROUTING=false # Complex department routing management

# Future Features (v3.0+)
VITE_FEATURE_PREDICTIVE_MAINTENANCE=false  # Predictive maintenance with IoT
VITE_FEATURE_ADVANCED_SETTINGS=false       # Advanced admin settings
VITE_FEATURE_INTEGRATIONS=false            # Third-party integrations

# Feature Modules (Granular Control)
# -----------------------------------
VITE_FEATURE_MODULES_AI_METRICS=false           # AI performance metrics
VITE_FEATURE_MODULES_ADVANCED_CHARTS=false      # Complex data visualizations
VITE_FEATURE_MODULES_DEPARTMENT_STATS=false     # Per-department statistics
VITE_FEATURE_MODULES_AUTO_ROUTING=true          # Basic auto-categorization (MVP)
VITE_FEATURE_MODULES_ROUTING_RULES=false        # Complex routing rule management
VITE_FEATURE_MODULES_CONFIDENCE_SCORES=false    # ML confidence indicators
VITE_FEATURE_MODULES_SENTIMENT_ANALYSIS=false   # Sentiment analysis features
VITE_FEATURE_MODULES_PATTERN_DETECTION=false    # Pattern detection algorithms
VITE_FEATURE_MODULES_ANOMALY_DETECTION=false    # Anomaly detection features
VITE_FEATURE_MODULES_API_KEYS=false             # API key management
VITE_FEATURE_MODULES_TWO_FACTOR_AUTH=false      # 2FA authentication
VITE_FEATURE_MODULES_EMAIL_INTEGRATION=false    # Email service integration
VITE_FEATURE_MODULES_SMS_INTEGRATION=false      # SMS service integration

# =================================================================
# API Configuration
# =================================================================

# Backend API Base URL
# Development: http://localhost:5000
# Production: https://api.railmadad.com
VITE_API_BASE_URL=http://localhost:5000

# API Version
VITE_API_VERSION=v1

# =================================================================
# Authentication
# =================================================================

# JWT Token Configuration
VITE_AUTH_TOKEN_KEY=rail_madad_token
VITE_AUTH_REFRESH_TOKEN_KEY=rail_madad_refresh_token

# Session timeout in minutes
VITE_SESSION_TIMEOUT=1440  # 24 hours

# =================================================================
# Application Configuration
# =================================================================

# Application name
VITE_APP_NAME="Rail Madad AI"

# Application version
VITE_APP_VERSION=1.0.0-MVP

# Environment
VITE_ENV=development  # development | staging | production

# Enable debug mode (shows additional console logs)
VITE_DEBUG=true

# =================================================================
# Analytics & Monitoring (Optional)
# =================================================================

# Google Analytics ID (if using)
# VITE_GA_TRACKING_ID=

# Sentry DSN for error tracking (if using)
# VITE_SENTRY_DSN=

# =================================================================
# Development Tools
# =================================================================

# Enable React DevTools
VITE_REACT_DEVTOOLS=true

# Enable Redux DevTools (if using Redux)
# VITE_REDUX_DEVTOOLS=true

# Show component boundaries (debugging)
VITE_SHOW_BOUNDARIES=false

# =================================================================
# Build Configuration
# =================================================================

# Build output directory
# VITE_OUT_DIR=dist

# Base public path
# VITE_BASE_PATH=/

# =================================================================
# Usage Instructions
# =================================================================
#
# 1. Copy this file to `.env.local` (this is gitignored)
#    cp .env.example .env.local
#
# 2. Update values as needed for your environment
#
# 3. Restart development server to apply changes
#    npm run dev
#
# 4. For production builds, set appropriate values in your
#    deployment platform's environment variables
#
# =================================================================
# Feature Flag Quick Configurations
# =================================================================
#
# MVP v1.0 (Default):
# -------------------
# VITE_ENABLE_ALL_FEATURES=false
# All advanced features disabled
#
# Development (All Features):
# ---------------------------
# VITE_ENABLE_ALL_FEATURES=true
# Shows all features for testing
#
# v2.0 Staging:
# -------------
# VITE_ENABLE_ALL_FEATURES=false
# VITE_FEATURE_AI_INSIGHTS=true
# VITE_FEATURE_ANALYTICS=true
# VITE_FEATURE_DEPARTMENT_ROUTING=true
#
# v2.0 Production:
# ----------------
# Update feature flags in src/config/features.ts
# instead of environment variables for production
#
# =================================================================
# Security Notes
# =================================================================
#
# ⚠️ IMPORTANT:
# - Never commit .env.local or .env files with sensitive data
# - Feature flags are client-side and can be bypassed
# - Backend must also validate feature access
# - Don't store API keys or secrets in VITE_ variables
#   (they are exposed in the client bundle)
#
# =================================================================
